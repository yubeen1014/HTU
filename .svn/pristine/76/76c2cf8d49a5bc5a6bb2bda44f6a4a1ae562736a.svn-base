<%@ page language="java" contentType="text/html; charset=UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%>
<%@ taglib prefix="sec" uri="http://www.springframework.org/security/tags"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="sec" uri="http://www.springframework.org/security/tags"%>
<link rel="stylesheet" href="/resources/css/bootstrap.min.css">
<script src="/resources/js/jquery.min.js"></script>

<sec:authorize access="isAuthenticated()">
    <sec:authentication property="principal.userVO" var="userVO" />
</sec:authorize>

<div class="row" style="margin-bottom:20px; margin-left:1px;">
  <div class="col-lg-12">
    <h1 class="page-header">강의 공지사항</h1>
  </div>
</div>
<p>${lectureVOList}</p>
<div class="panel" style="margin-left:1px;">
  <div id="contAreaBox">
    <div class="panel">
      <div class="panel-body">
        <form role="form" id="lecNoticeFrm" action="/professor/lecturenotice/create?${_csrf.parameterName}=${_csrf.token}" method="post" enctype="multipart/form-data">
          <div class="table-responsive" style="text-align:center;">
            <table id="datatable-scroller" class="table table-bordered tbl_Form">
              <caption></caption>
              <colgroup>
                <col width="250px" />
                <col />
              </colgroup>
              <tbody>
                <tr>
                  <th class="active">제목</th>
                  <td class="form-inline">
                    <input type="text" id="lecnTitle" name="lecnTitle" value=""  class="form-control" style="width: 840px" />
   			        <input type="hidden" id="lecCd" name="lecCd" value="" />
                  </td>
                </tr>
<!--                 <tr> -->
<!--                   <th class="active">내용</th> -->
<!--                   <td class="form-inline"> -->
<!--                     <input type="text" id="nbTitle" name="nbTitle" class="form-control" style="width: 840px" /> -->
<!--                   </td> -->
<!--                 </tr> -->
                <tr>
                  <th class="active">첨부파일</th>
                  <td class="form-inline">
                    <input type="file" id="uploadFiles" name="uploadFiles" class="form-control" style="width: 840px" multiple />
                  </td>
                </tr>
                <tr>
                  <th class="active">내용</th>
                  <td class="form-inline">
                    <textarea id="lecnCon" name="lecnCon" cols="100" rows="10" class="form-control"></textarea>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
          <div style="margin-left:1px;">
            <button type="button" id="lecNotSubmit" class="btn btn-primary">등록</button>
            <a href="/common/board/notice/list" class="btn btn-danger">취소</a>
          </div>
          <sec:csrfInput/>
        </form>
      </div>
    </div>
  </div>
</div>



<script type="text/javascript">
$(function(){
	$("#lecNotSubmit").on("click", function(){
		var lecCD = localStorage.getItem("lecCD");
		
		$("#lecNoticeFrm input[name='lecCd']").val(lecCD);
		
		$("#lecNoticeFrm").submit();
		
	});
	
});
</script> 



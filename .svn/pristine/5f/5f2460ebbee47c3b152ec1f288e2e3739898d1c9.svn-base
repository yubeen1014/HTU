<%@ page language="java" contentType="text/html; charset=UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%>
<%@ taglib prefix="sec"
	uri="http://www.springframework.org/security/tags"%>

<style>
#content.content{
	background-color: white;
}
#datatable-scroller {
	width: 1000px;
}
.container{
	position:absolute;
	top:0%;
	left:0%;
	right:0%;
/* 	height:120%; */
/* 	width: 100%; */
}

.image_container {
	width: 500px;
	height: 200px;
	border: 1px solid #ccc;
	background-position: center;
	background-size: cover;
	margin-bottom: 20px;
}
h1{
    font-weight: bold;
    font-size: 1.9em;
    top: 55%;
    left: 16%;
    position: absolute;
}
#hr1{
    width: 800px;
    position: absolute;
    left: 16%;
    top: 135%;
}
#dateSpan{
    left: 16%;
    top: 105%;
    font-size: 0.9em;
    position: absolute;
}
</style>


<sec:authorize access="isAuthenticated()">
	<sec:authentication property="principal.userVO" var="userVO" />
</sec:authorize>

<%-- <p>${lectureNoticeVO}</p> --> --%>
<input type="hidden" name="lecnCd" value="${lectureNoticeVO.lecnCd}" id="lecnCd"/>
<input type="hidden" name="lecCd" value="${lectureNoticeVO.lecCd}" />
<div class="container" style="background-color:white; margin-left: 1px;">
	<div class="row" style="margin-bottom: 20px; margin-left: 1px;">
		<div class="col-lg-12">
			<br>
			<h1 class="page-header">${lectureNoticeVO.lecnTitle}</h1>
			<br>
			<br>
			<br>
			<br>
			<span id="dateSpan"><fmt:formatDate value="${lectureNoticeVO.lecnReg}" pattern="YYYY.MM.dd"/></span>
		</div>
		<hr id="hr1">
		<br>
		<c:choose>
		<c:when test="${not empty lectureNoticeVO.filesDetailVOList}">
			<c:forEach items="${lectureNoticeVO.filesDetailVOList}" var="vo">
				<img alt="" src="/resources/upload/${vo.fileSvnm}">
			</c:forEach>
			
			<br />
		</c:when>
	</c:choose>
		<br />
	</div>

</div>


<script type="text/javascript">
logout = function() {
	$("#logoutForm").submit();
}
	
$(function(){
	$("#btnLecnList").on("click", function(){
		console.log("왔다");
		sweetConfirmList();
	});
    
	function sweetConfirmList() {
	    Swal.fire({
	        text: "목록으로 돌아가시겠습니까?",
	        icon: "question",
	        width: 300,
	        showCancelButton: true,
	        confirmButtonColor: "#3085d6",
	        cancelButtonColor: "#d33",
	        confirmButtonText: "네",
	        cancelButtonText: "아니오"
	    }).then((result) => {
	        console.log(result);
	        if (result.isConfirmed) {
	            // "네"를 클릭했을 때의 동작
	            location.href = "/student/lecturenotice/list?lecCd=" + ${param.lecCd};
	        } else {
	            // "아니오"를 클릭했을 때의 동작
	            alertError('취소');
	        }
	    });
	}

	
});	

</script>




<%@ page language="java" contentType="text/html; charset=UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%>
<%@ taglib prefix="sec" uri="http://www.springframework.org/security/tags" %>
<script src="/resources/js/jquery.min.js"></script>
<sec:authentication property="principal.userVO" var="userVO"/>
<div>
	<form action="/student/crew/crewApplyPost?${_csrf.parameterName}=${_csrf.token}" method="post" enctype="multipart/form-data">
		<div>
			<p>동아리명</p>
			<input type="text" name="crNm" required="required"/>
		</div>
		<div>
			<p>동아리 목적</p>
			<input type="text" name="crCon" required="required"/>
		</div>
		<div>
			<p>동아리장</p>
			<input type="text" name="crLeader" value="${userVO.userCd}" required="required"/>
		</div>
		<div>
			<p>희망 동아리실</p>
			<select name="roomCd" id="roomCd">
				<c:forEach var="roomList" items="${roomList}">
					<option value="${roomList.roomCd}">${roomList.roomNm}</option>
				</c:forEach>
			</select>
		</div>
		<div>
			<p>파일첨부</p>
			<input type="file" name="uploadFiles" multiple="multiple" />
		</div>
		<div>
			<button type="submit" id="btnApply" class="btn-two red mini">신청</button>
		</div>
		<sec:csrfInput />
	</form>
</div>
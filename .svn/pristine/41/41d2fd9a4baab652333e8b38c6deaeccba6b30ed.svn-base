<%@ page language="java" contentType="text/html; charset=UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%>
<%@ taglib prefix="sec"
	uri="http://www.springframework.org/security/tags"%>
<script src="/resources/js/jquery.min.js"></script>

<style>
.board_wrap {
	background-color: #ffffff;
	padding: 30px;
}

.board_header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 20px;
}

.board_title {
	font-size: 24px;
	font-weight: bold;
	margin-bottom: 10px;
}

.board_info {
	color: #555;
	font-size: 14px;
}

.board_info span {
	margin-right: 20px;
}

.image_container {
	width: 920px;
	height: 400px;
	border: 1px solid #ccc;
	background-position: center;
	background-size: cover;
	margin-bottom: 20px;
}

.board_content {
	text-align: left;
	max-width: 60%;
	white-space: pre-line;
}

.report_button {
	display: inline-block;
	padding: 10px 20px;
	background-color: #800020;
	color: #fff;
	text-decoration: none;
	font-weight: 300;
	border-radius: 5px;
}

.board_separator {
	border-top: 1px solid #ccc;
	margin: 20px 0;
}

.report_button:hover {
	background-color: #600015;
}
</style>

<!-- 신고 모달창 시작 -->
<div class="modal fade" id="reportModal" tabindex="-1" role="dialog"
	aria-labelledby="reportModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-body">
				<!-- 입력 폼 -->
				<div class="form-group">
					<input type="text" name="bdCd" id="modalBdCd" value="" /> <label
						for="reportReason">신고 사유</label> <select class="form-control"
						id="reportReason">
						<option value="" selected disabled>선택하세요</option>
						<option value="불건전한 내용">불건전한 내용</option>
						<option value="주제에 맞지 않음">주제에 맞지 않음</option>
						<option value="욕설 및 혐오표현">욕설 및 혐오표현</option>
						<option value="기타">기타</option>
					</select>
				</div>
				<div class="form-group">
					<label for="reportDetails">상세 내용</label>
					<textarea class="form-control" id="reportDetails" rows="3"
						placeholder="상세 내용을 입력하세요"></textarea>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary"
					onclick="closeReportModal()">취소</button>
			</div>
		</div>
	</div>
</div>
<!-- "신고" 모달 종료 -->

<br />
<div class="board_wrap">
	<div class="board_header">
		<h3 style="font-size: 30px; font-weight: bold;">
			자유게시판<i class="fa-solid fa-circle-info"
				style="position: absolute; top: 77px; left: 210px;"></i>
		</h3>
		<div class="board_info">
			<span><b>작성자:</b> ${boardVO.userCd}</span> <span><b>작성일:</b> <fmt:formatDate
					value="${boardVO.bdReg}" pattern="yyyy-MM-dd HH:mm" /></span> <span><b>조회수:</b>
				${boardVO.bdCnt}</span>
			<button class="btn btn-warn" style="">신고</button>
		</div>
	</div>

	<hr class="board_separator">

	<div class="board_title">${boardVO.bdTitle}</div>

	<hr class="board_separator">

	<c:choose>
		<c:when test="${not empty boardVO.fileList}">
			<c:forEach items="${boardVO.fileList}" var="vo">
				<div class="image_container"
					style="background-image: url(/resources/upload/${vo.fileSvnm});"></div>
			</c:forEach>
			<br />
		</c:when>
	</c:choose>

	<hr class="board_separator">

	<div class="board_content">${boardVO.bdCon}</div>

	<hr class="board_separator">

	<div id="commentList" class="card-footer">
		<div class="row">
			<div class="col-md-7">
				<div class="form-group">
					<input id="commentContent" type="text"
						class="form-control col-md-8" placeholder="댓글을 입력하세요." required>
				</div>
			</div>
			<div class="col-md-2 ml-5">
				<div class="form-group">
					<button id="insertComment" class="btn-two mini sky">등록</button>
				</div>
			</div>
		</div>
		<sec:authentication property="principal.userVO" var="userVO" />
		<c:forEach items="${boardVO.commentList}" var="vo">
			<div class="row">
				<div class="col-md-8">
					<div class="form-group">
						<span>${vo.cmtCon}</span>
						<button class="btn btn-sm btn-primary parentComment"
							data-cmt-cd="${vo.cmtCd}">댓글</button>
						<button class="btn btn-sm btn-danger commentReport"
							data-cmt-cd="${vo.cmtCd}">신고</button>
						<c:if test="${vo.userCd eq userVO.userCd}">
							<button id="btnDelete" data-cmt-cd="${vo.cmtCd}">삭제</button>
						</c:if>
					</div>
				</div>
			</div>
		</c:forEach>
	</div>
	</br>
	<button class="btn-two mini green"
		onclick="location.href='/common/board/free/update?bdCd=${boardVO.bdCd}' "
		style="margin-left: 10px;">수정</button>
	<%--     <button class="btn-two mini orange" onclick="location.href='/common/board/free/delete?bdCd=${boardVO.bdCd}'" style="position: absolute; left: 110px;">삭제</button> --%>
	<button type="button" id="btnDelete"
		style="display: inline-block; padding: 10px 20px; background-color: #800020; color: #fff; text-decoration: none; font-weight: 300; border-radius: 5px; position: absolute; right: 30px;">삭제</button>
</div>

<script type="text/javascript" src="/resources/js/postReport.js">
	$(function() {
		$(".image_container").each(function() {
			let url = $(this).data("url");
			$(this).css({
				"background-image" : "url(/resources/upload/" + url + ")",
				"background-position" : "center",
				"background-size" : "cover"
			});
		});
	});

	<button type="button" id="btnDelete" style="display: inline-block; padding: 10px 20px; background-color: #800020; color: #fff; text-decoration: none; font-weight: 300; border-radius: 5px; position: absolute; right: 30px;">삭제</button>

	<script src="https://code.jquery.com/jquery-3.6.4.min.js">
</script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function() {
        $("#btnDelete").click(function() {
            // 여기에 삭제할 게시글의 ID나 다른 필요한 정보를 가져오는 코드를 추가하세요.
            var bdCd = "게시글 ID 또는 다른 식별자";

            // 사용자에게 삭제 여부를 확인하는 메시지를 띄웁니다.
            if (confirm("게시물을 삭제하시겠습니까?")) {
                // AJAX를 사용하여 서버에 삭제 요청을 보냅니다.
                $.ajax({
                    type: "GET",
                    url: "/common/board/free/delete",
                    data: JSON.stringify({ bdCd: bdCd }),
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    headers: {
                        "X-CSRF-TOKEN": csrfToken
                    },
                    success: function(data) {
                        if (data.result === "success") {
                            // 게시물이 성공적으로 삭제되면 메시지를 표시하고 페이지를 리로드합니다.
                            alert("게시물이 삭제되었습니다.");
                            location.href = "/common/board/free/list"; // 또는 다른 페이지 이동 등을 원하는 대로 설정하세요.
                        } else {
                            // 삭제 실패 시 오류 메시지를 표시합니다.
                            alert(data.message);
                        }
                    },
                    error: function(jqXHR, textStatus, errorThrown) {
                        // AJAX 오류가 발생한 경우 콘솔에 오류를 기록하고 사용자에게 알립니다.
                        console.error("AJAX Error:", textStatus, errorThrown);
                        alert("서버 오류로 인해 게시물 삭제에 실패했습니다.");
                    }
                });
            }
        });
    });
</script>




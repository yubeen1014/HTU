<%@ page language="java" contentType="text/html; charset=UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%>
<%@ taglib prefix="sec" uri="http://www.springframework.org/security/tags" %>
<script src="/resources/js/jquery.min.js"></script>
<style>
	.crewListWrap {
	  height: 100%;
	}
	.crewListWrap a{
	  color:#333333!important; 
	  text-decoration:none!important;
	}
	.crewListWrap a:hover{
	  color:#333333!important; 
	  text-decoration:none!important;
	}
	.crewHeaderName {
	  font-size: 20px; 
	  padding-bottom:30px;
	}
	.crewList {
	  width: 100%;
/* 	  height: 100%; */
	  overflow: auto;
	}
	.crewTable {
	  background-color: #ffffff;
	  border-radius: 5px;
	  width: 100%; 
	  height: 100%;
	  text-align: center;
	  line-height: 3rem;
	}
	.crewTable th {
      position: sticky;
      top: 0px;
      background-color : #eaeaea;
	}
	.crewTable-tr {
	  border-bottom: 1px solid #eaeaea; 
	  padding: 3px;
	}
	.crewTable tr:last-child {
	  border:none;
	}
</style>
<sec:authentication property="principal.userVO" var="userVO"/>
<div class="crewListWrap">
	<div class="crewHeader">
		<div class="crewHeaderName">
			나의 동아리
		</div>
	</div>
	<div class="crewList">
		<table class="crewTable">
			<tr class="table_title">
				<th>동아리명</th>
				<th>동아리목적</th>
				<th>동아리장</th>
				<th>위치</th>
			</tr>
			<c:forEach var="crewVO" items="${myCrew}">
				<tr class="crewTable-tr">
					<td>
						<a href="/student/crew/crewDetail?crCd=${crewVO.crCd}">${crewVO.crNm}</a>
					</td>
					<td>${crewVO.crCon}</td>
					<td>${crewVO.ldrNm}</td>
					<td>학생회관 ${crewVO.roomNm}</td>
				</tr>
			</c:forEach>
		</table>
	</div>
</div>
<%@ page language="java" contentType="text/html; charset=UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%>
<%@ taglib prefix="sec" uri="http://www.springframework.org/security/tags" %>
<!-- <script src="/resources/js/jquery.min.js"></script> -->
<style>
	.crewHeaderName {
	  font-size: 20px; 
	  padding-bottom:30px;
	}
	.crewList {
	  width: 100%;
/* 	  height: 100%; */
	  overflow: auto;
	}
	.crewTable {
	  background-color: #ffffff;
	  width: 100%; 
	  height: 100%;
	  text-align: center;
	  line-height: 3rem;
	}
	.crewTable th {
      position: sticky;
      top: 0px;
      background-color : #eaeaea;
	}
	.crewTable-tr {
	  border-bottom: 1px solid #eaeaea; 
	  padding: 3px;
	}
	.crewTable tr:last-child {
	  border:none;
	}
	.crewSearchForm {
      background-color: #ffffff;
      border: 1px solid #ddd;
      border-radius: 100px;
      position: absolute;
      top: 20px;
      right: 100px;
      padding: 5px 15px 5px 15px;
	}
	.crewSearch {
      outline: none;
      font-size: 15px;
	}
	.crewSearchBtn {
      width: 15px;
      height: 15px;
      border: 0;
	}
</style>
<div class="crewHeader">
	<div class="crewHeaderName">
		동아리 관리
	</div>
	<div class="crewSearchForm">
		<form>
			<input class="crewSearch" type="text" placeholder="검색" name="keyword"
				value="${keyword}" />
			<input type="image" src="/resources/images/free-icon-search-149852.png" name="submit" class="crewSearchBtn" value="검색" />
		</form>
	</div>
</div>
<div class="crewList">
	<table class="crewTable">
		<tr class="table_title">
			<th style="width: 20%">동아리명</th>
			<th style="width: 30%">동아리목적</th>
			<th style="width: 15%">동아리장</th>
			<th style="width: 5%">인원</th>
			<th style="width: 20%">위치</th>
			<th style="width: 10%">운영상태</th>
		</tr>
		<c:forEach var="crewVO" items="${crewVOList}">
			<tr class="crewTable-tr">
				<td>
					<a href="/employee/crew/crewDetail?crCd=${crewVO.crCd}">${crewVO.crNm}</a>
				</td>
				<td>${crewVO.crCon}</td>
				<td>${crewVO.ldrNm}</td>
				<td>${crewVO.crPs}</td>
				<td>학생회관 ${crewVO.roomNm}</td>
				<c:if test="${crewVO.crYn eq 0}">
					<td>운영</td>
				</c:if>
				<c:if test="${crewVO.crYn eq 1}">
					<td>폐쇄</td>
				</c:if>
			</tr>
		</c:forEach>
		
	</table>
</div>
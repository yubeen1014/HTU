<%@ page language="java" contentType="text/html; charset=UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%>
<%@ taglib prefix="sec"
	uri="http://www.springframework.org/security/tags"%>

<style>
/* 공통 스타일 */
.text-center {
	text-align: center;
}


/* 글쓰기 링크 스타일 */
.write-link {
	position: absolute;
	top: 50%;
	left: 80%;
}

.FreeBoard_box {
	background-color: white;
	border: 1px solid #D8D8D8;
    display: inline-flex;
    flex-direction: column;
	gap: 10px; 
    justify-content: space-around;
	border-radius: 10px;
    width: 250px;
    height: 250px;
    flex: 1;	
}
.FreeBoard_box .top-section {
	background-color: #751c35; /* 태두리색과 동일하게 설정 */
	border: 1px solid #751c35; 
	border-top-left-radius:10px ;
	border-top-right-radius:10px ;
/*     border-radius: 16px; */
	height: 100px;
	width: 100%;
/* 	flex: 1; /* 높이를 동일하게 나누기 위한 설정  */
}

/* 아래 영역 스타일 */
.FreeBoard_box .bottom-section {
/*  	background-color: #f6f0f1; */
 	background-color: white;
 	border-radius: 16px #D8D8D8;
 	border-bottom-left-radius: 10px ;
 	border-bottom-right-radius: 10px;
 	height: 60%;
 	width: 100%;
	flex: 1; /* 높이를 동일하게 나누기 위한 설정 */
}

.clsa {
	display: inline-block;
	margin-top: 20px;
	margin-left: 20px;
}
.FreeBoard_box .top-section .fa-solid.fa-circle-info {
    display: inline-block;
    margin-top: 30px;
    margin-left: 20px;
}
.FreeBoard_box .top-section .clsSpan {
    display: block;
    margin-top: 30px; /* 원하는 간격 설정 */
    padding-left: 20px; /* 왼쪽 여백 설정 */
    color: white;
    font-size: 0.8em; /* 원하는 글자 크기 설정 */
    position: absolute;
}
</style>
<sec:authorize access="isAuthenticated()">
	<sec:authentication property="principal.userVO" var="userVO" />
</sec:authorize>
<c:forEach items="${enrolmentVOList}" var="enrolmentVO" varStatus="stat">
	<div class="FreeBoard_box" >
		<div class="top-section">
<!-- 			<i class="fa-solid fa-circle-info" style="color: white;"></i> -->
			<a class="clsa" href="/student/lecture/detail?lecCd=${enrolmentVO.lectureVO.lecCd}" 
			style="color: white; font-size: 1.3em;">${enrolmentVO.lectureVO.lectureApplyVO.lecaNm}
			<c:if test="${enrolmentVO.lectureVO.lectureApplyVO.lecaType == 0}">(전필)</c:if>
			<c:if test="${enrolmentVO.lectureVO.lectureApplyVO.lecaType == 1}">(전선)</c:if>
			<c:if test="${enrolmentVO.lectureVO.lectureApplyVO.lecaType == 2}">(교필)</c:if>
			<c:if test="${enrolmentVO.lectureVO.lectureApplyVO.lecaType == 3}">(교선)</c:if></a>
			<span class="clsSpan">${enrolmentVO.lectureVO.lectureApplyVO.professorVO.userVO.userNme}</span>
			
        </div>
        <div class="bottom-section">
            <!-- 아래 영역의 내용 -->
        </div>
	</div>
</c:forEach>


<script>
$(function(){
	
	
	
});
</script>
<form name="frm" action="/mail/sendMailPost?${_csrf.parameterName}=${_csrf.token}" method="post" enctype="multipart/form-data">
	<p>받는 사람</p>
	<select name="umlReceiver">
		<c:forEach var="userVO" items="${userVOList}">
			<option value="${userVO.userCd}">${userVO.userNm}</option>
		</c:forEach>
	</select>
	<p>제목</p>
	<input type="text" name="umlTitle">
	<p>파일첨부</p>
	<input type="file" name="uploadFiles" multiple="multiple">
	<p>내용</p>
	<input type="text" name="umlCon">
	<div>
		<button id="btnTemp" style="border:none; border-radius:5px; margin-top:15px; background-color:#7e1717; color:#ffffff; font-weight:300; padding:5px 10px; display:inline-block;">임시저장</button>
		<button type="submit" id="btnSend" style="border:none; border-radius:5px; margin-top:15px; background-color:#7e1717; color:#ffffff; font-weight:300; padding:5px 10px; display:inline-block;">보내기</button>
	</div>
	<sec:csrfInput />
</form>

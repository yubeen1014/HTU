<%@ page language="java" contentType="text/html; charset=UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%>
<%@ taglib prefix="sec" uri="http://www.springframework.org/security/tags"%>
<link rel="stylesheet" href="/resources/css/bootstrap.min.css">
<script src="/resources/js/jquery.min.js"></script>

</br>
<a href="/common/board/free/list"
    style="display: inline-block; padding: 10px 20px; background-color: #800020; color: #fff; text-decoration: none; font-weight: 300; border-radius: 5px; position: absolute; right: 30px;">목록</a>
<button type="button" id="btnDelete"
    style="display: inline-block; padding: 10px 20px; background-color: #800020; color: #fff; text-decoration: none; font-weight: 300; border-radius: 5px;">
    삭제</button>

</br>
</br>
<div class="row" style="margin-bottom: 20px; margin-left: 1px;">
    <div class="col-lg-12">
        <h1 class="page-header">자유게시판 상세글</h1>
    </div>
</div>

<div class="panel" style="margin-left: 1px;">
    <div id="contAreaBox">
        <div class="panel">
            <div class="panel-body">
                <div class="table-responsive" style="text-align: center;">
                    <table id="datatable-scroller" class="table table-bordered tbl_Form">
                        <caption></caption>
                        <colgroup>
                            <col width="250px" />
                            <col />
                        </colgroup>
                        <tbody>
                            <tr>
                                <th class="active">제목</th>
                                <td>${boardVO.bdTitle}</td>
                            </tr>
                            <tr>
                                <th class="active">작성자</th>
                                <td>${boardVO.userCd}</td>
                            </tr>
                            <tr>
                                <th class="active">작성일</th>
                                <td>${boardVO.bdReg}</td>
                            </tr>
                            <tr>
                                <th class="active">내용</th>
                                <td>${boardVO.bdCon}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div style="margin-left: 1px;"></div>
            </div>
        </div>
    </div>
</div>

<script>
// 버튼 클릭 이벤트 정의
$("#btnDelete").click(function() {
    // 확인 다이얼로그 표시
    if (confirm("게시물을 삭제하시겠습니까?")) {
        // 삭제 함수 호출
        deletePost("${boardVO.bdCd}", "${_csrf.token}");
    }
});

// 게시물 삭제 함수
function deletePost(bdCd, csrfToken) {
    $.ajax({
        type: "POST",
        url: "/common/board/free/deletePost",
        data: JSON.stringify({ bdCd: bdCd }),
        contentType: "application/json;charset=utf-8",
        dataType: "json",
        headers: {
            "X-CSRF-TOKEN": csrfToken
        },
        success: function(data) {
            if (data.result === "success") {
                alert("게시물이 삭제되었습니다.");
                location.href = "/common/board/free/list"; // 목록 페이지로 이동
            } else {
                alert(data.message);
            }
        },
        error: function(jqXHR, textStatus, errorThrown) {
            console.error("AJAX Error:", textStatus, errorThrown);
            alert("서버 오류로 인해 게시물 삭제에 실패했습니다.");
        }
    });
}
</script>
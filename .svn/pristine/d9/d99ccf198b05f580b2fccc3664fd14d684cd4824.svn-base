<%@ page language="java" contentType="text/html; charset=UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%>
<%@ taglib prefix="sec" uri="http://www.springframework.org/security/tags"%>

<script src="/resources/js/jquery.min.js"></script>
<style>
.crew_box {
	width: 100%;
	padding: 40px;
	background-color: #ffffff;
}

.crew_box .table_topic {
	font-size: 20px;
	padding-bottom: 30px;
}

.crew_box table {
	font-size: 14px;
	width: 100%;
	text-align: center;
}

.table_title {
	font-size: 13px;
	border-top: 1px solid #d1d0d0;
	border-bottom: 1px solid #d1d0d0;
	height: 32px;
	line-height: 32px;
}

.crew_box tr {
	height: 40px;
}

.crew_box tr td:nth-child(1) {
	width: 5%;
}

.crew_box tr td:nth-child(2) {
	width: 15%;
}

.crew_box tr td:nth-child(3) {
	width: 20%;
}

.crew_box tr td:nth-child(4) {
	width: 15%;
}

.crew_box tr td:nth-child(5) {
	width: 15%;
}

.crew_box tr td:nth-child(6) {
	width: 10%;
}

.crew_box tr td:nth-child(7) {
	width: 20%;
}

.newCrewHeader, .appList {
	font-size: 16px;
	padding-bottom: 10px;
}

#rtnModal {
	position: absolute;
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, 0.4);
	top: 0;
	left: 0;
	display: none;
}

.rtnModal-content {
	background-color: #fefefe;
	margin: 15% auto;
	padding: 20px;
	width: 40%;
	height: 60%;
}

#rtnBtn, #closeBtn {
	float: right;
}

.rtnReason {
	padding: 10px;
}

#appRet {
	width: 100%;
	height: 80%;
	font-size: 14px;
	border: 0;
	border-radius: 15px;
	outline: none;
	padding: 15px;
	background-color: rgb(233, 233, 233);
	resize: none;
}

.crewListDiv {
	padding-top: 20px;
	height: 50%;
}

.crTb {
	height: 90%;
	overflow: auto;
}

.crewList {
	width: 100%;
	border-radius: 5px;
	height: 60%;
	padding: 40px;
	margin-bottom: 10px;
	background-color: #eef1f6;
}

.crewTable {
	font-size: 14px;
	background-color: #ffffff;
	width: 100%;
	height: 100%;
	text-align: center;
}

.crewTable th {
	font-size: 13px;
	border-top: 1px solid #d1d0d0;
	border-bottom: 1px solid #d1d0d0;
	height: 32px;
	line-height: 32px;
}

.crewTable-tr {
	border-bottom: 1px solid #eaeaea;
	height: 40px;
}

.crewTable tr:last-child {
	border: none;
}

.newCrewList {
	border-radius: 5px;
	height: 25%;
	padding: 40px;
	margin-bottom: 30px;
	background-color: #f6eeee;
}

.newCrewTableWrqp {
	overflow: auto;
}

.newCrewTable {
	font-size: 14px;
	background-color: #ffffff;
	width: 100%;
	height: 100%;
	text-align: center;
}

.newCrewTable th {
	font-size: 13px;
	border-top: 1px solid #d1d0d0;
	border-bottom: 1px solid #d1d0d0;
	height: 32px;
	line-height: 32px;
}
</style>


<sec:authorize access="isAuthenticated()">
	<sec:authentication property="principal.userVO" var="userVO" />
</sec:authorize>

<div class="crew_box">
	<div style="font-size:12px; color:#888888; margin-bottom: 20px;">
			<span><svg xmlns="http://www.w3.org/2000/svg" height="13" width="13" viewBox="0 0 576 512" style="margin-right: 5px;"><path fill="#888888" d="M575.8 255.5c0 18-15 32.1-32 32.1h-32l.7 160.2c0 2.7-.2 5.4-.5 8.1V472c0 22.1-17.9 40-40 40H456c-1.1 0-2.2 0-3.3-.1c-1.4 .1-2.8 .1-4.2 .1H416 392c-22.1 0-40-17.9-40-40V448 384c0-17.7-14.3-32-32-32H256c-17.7 0-32 14.3-32 32v64 24c0 22.1-17.9 40-40 40H160 128.1c-1.5 0-3-.1-4.5-.2c-1.2 .1-2.4 .2-3.6 .2H104c-22.1 0-40-17.9-40-40V360c0-.9 0-1.9 .1-2.8V287.6H32c-18 0-32-14-32-32.1c0-9 3-17 10-24L266.4 8c7-7 15-8 22-8s15 2 21 7L564.8 231.5c8 7 12 15 11 24z"/></svg></span>
			<span style="font-size:12px; color:#888888;">></span>
			<span style="font-size:12px; color:#888888;">강의</span>
			<span style="font-size:12px; color:#888888;">></span>
			<span style="font-size:12px; color:#888888;">과제</span>
		</div>
	<div class="table_topic">과제</div>
	<div class="newCrewList">
		<div class="newCrewHeader">제출기한 지난 과제</div>
		<c:choose>
			<c:when test="${!empty edTaskVOList}">
				<div class="newCrewTableWrqp">
					<table>
						<tr class="table_title">
							<th style="width: 5%;">NO</th>
							<th style="width: 15%;">과제명</th>
							<th style="width: 20%;">과제등록일</th>
							<th style="width: 20%;">과제마감일</th>
							<th style="width: 15%;">제출인원</th>
						</tr>
						<c:forEach var="edTaskVO" items="${edTaskVOList}"
							varStatus="status">
							<c:if test="${edTaskVO.lecCd eq param.lecCd}">
							<tr class="crewTable-tr">
								<td>${status.count}</td>
								<td><a href="/professor/task/detail?taskCd=${edTaskVO.taskCd}&lecCd=${param.lecCd}">${edTaskVO.taskNm}</a></td>
								<td><fmt:formatDate value="${edTaskVO.taskReg}" pattern="yyyy-MM-dd" /></td>
								<td><fmt:formatDate value="${edTaskVO.taskEddt}" pattern="yyyy-MM-dd" /></td>
								<td>구해서 넣기taskSubmit이용</td>
							</tr>
							</c:if>
						</c:forEach>
					</table>
				</div>
			</c:when>
			<c:otherwise>
				<div style="text-align: center; padding-top: 75px; color: #333333; font-size: 14px;">제출기한이 지난 과제가 없습니다.</div>
			</c:otherwise>
		</c:choose>
	</div>
	<div class="crewList">
		<div class="appList">
			<p>과제 목록</p>
		</div>
		<div class="crTb">
			<table>
				<tr class="table_title">
					<th>NO</th>
					<th>과제명</th>
					<th>과제등록일</th>
					<th>과제마감일</th>
					<th>제출인원</th>
				</tr>
				<c:forEach var="taskVO" items="${taskVOList}" varStatus="stat">
					<c:if test="${taskVO.lecCd eq param.lecCd}">
					<tr class="crewTable-tr">
						<td>${stat.count}</td>
						<td><a href="/professor/task/detail?taskCd=${taskVO.taskCd}&lecCd=${param.lecCd}">${taskVO.taskNm}</a></td>
						<td><fmt:formatDate value="${taskVO.taskReg}" pattern="yyyy-MM-dd" /></td>
						<td><fmt:formatDate value="${taskVO.taskEddt}" pattern="yyyy-MM-dd" /></td>
						<td>구해서 넣기taskSubmit이용</td>
					</tr>
					</c:if>
				</c:forEach>
				
			</table>
			<div class="counsel_form_title" style="margin-bottom:0; margin-top:20px; position:absolute; right:30px; bottom:30px;">
			<div style="display:flex;">
				<c:if test="${userVO.comdCd == 'USER02'}">
				<a href="/professor/task/create?lecCd=${param.lecCd}" class="btn-reg bur" id="realSubmitForm">과제등록</a>
				</c:if>
			</div>
		</div>
		</div>
	</div>
</div>

<script type="text/javascript">
const taskUpdate = '${taskUpdate}';
const taskCreate = '${taskCreate}';
const taskDelete = '${taskDelete}';
$(function(){
	console.log('taskUpdate',taskUpdate);
	if (taskUpdate == 1) {
		alertSuccess('과제 수정완료');
	}
	if (taskCreate == 1) {
		alertSuccess('과제 등록완료');
	}
	if (taskDelete == 1) {
		alertSuccess('과제 삭제완료');
	}
});
</script>
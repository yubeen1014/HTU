<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.mapper.PublicizeBoardMapper">

	<resultMap type="boardVO" id="boardMap">
      <result property="bdCd" column="BD_CD" />
      <result property="userCd" column="USER_CD" />
      <result property="comdCd" column="COMD_CD" />
      <result property="bdTitle" column="BD_TITLE" />
      <result property="bdCon" column="BD_CON" />
      <result property="bdReg" column="BD_REG" />
      <result property="bdUdt" column="BD_UDT" />
      <result property="bdCnt" column="BD_CNT" />
      <association property="userVO" resultMap="userMap"/>
      <collection property="fileList" resultMap="fileDetailMap" />
   </resultMap>
   
   <resultMap type="userVO" id="userMap">
      <result property="userCd" column="USER_CD"/>
      <result property="userNm" column="USER_NM"/>
      <result property="userNme" column="USER_NME"/>
      <result property="userTel" column="USER_TEL"/>
      <result property="userZip" column="USER_ZIP"/>
      <result property="userAddr1" column="USER_ADDR1"/>
      <result property="userAddr2" column="USER_ADDR2"/>
      <result property="userReg1" column="USER_REG1"/>
      <result property="userReg2" column="USER_REG2"/>
      <result property="userMail" column="USER_MAIL"/>
      <result property="userPass" column="USER_PASS"/>
      <result property="userBank" column="USER_BANK"/>
      <result property="userDepo" column="USER_DEPO"/>
      <result property="userAcc" column="USER_ACC"/>
      <result property="fileCd" column="FILE_CD"/>
      <result property="comdCd" column="COMD_CD"/>
   </resultMap>
   
   <resultMap type="filesDetailVO" id="fileDetailMap">
      <result property="fileSn" column="FILE_SN"/>
      <result property="fileCd" column="FILE_CD"/>
      <result property="filePath" column="FILE_PATH"/>
      <result property="fileOrnm" column="FILE_ORNM"/>
      <result property="fileSvnm" column="FILE_SVNM"/>
      <result property="fileExtsn" column="FILE_EXTSN"/>
      <result property="fileCon" column="FILE_CON"/>
      <result property="fileSize" column="FILE_SIZE"/>
   </resultMap>
   
	<!-- 사업장 상세 
	BusinessVO(bSiteno=BS0041, bName=null, bAddress=null, bTelno=null
	, bAmount=0, bManqty=0, bStrdate=null, bPredate=null, bEnddate=null
	, bRemark=null)
	-->
	
	<!-- 사업장 목록 
	Map : 인터페이스 / hashMap : 구현클래스
	{"keyword":"개똥이","currentPage":"3"}
	-->
	<select id="list" parameterType="hashMap" resultMap="boardMap">
		SELECT  BD_CD, B.USER_CD, B.COMD_CD, BD_TITLE, BD_CON, BD_REG, BD_UDT, BD_CNT,
		        U.USER_CD, U.FILE_CD, USER_NM, USER_NME, USER_TEL, USER_ZIP, USER_ADDR1, USER_ADDR2, 
		        USER_REG1, USER_REG2, USER_MAIL, USER_PASS, USER_BANK, USER_DEPO, USER_ACC, U.COMD_CD,
		        FILE_SN, F.FILE_CD, FILE_PATH, FILE_ORNM, FILE_SVNM, FILE_EXTSN, FILE_CON, FILE_SIZE, FILE_USED
		FROM    BOARD B INNER JOIN USERS U
		ON      B.USER_CD = U.USER_CD LEFT OUTER JOIN FILES_DETAIL F
		ON      B.BD_CD = F.FILE_CD
		WHERE   B.COMD_CD = 'BORD02'
	</select>
	
	<select id="detail" resultMap="boardMap" parameterType="String">
		SELECT  B.BD_CD, B.USER_CD, B.COMD_CD, BD_TITLE, BD_CON, BD_REG, BD_UDT, BD_CNT,
		        USER_NM, USER_NME, USER_TEL, USER_ZIP, USER_ADDR1, USER_ADDR2, 
		        USER_REG1, USER_REG2, USER_MAIL, USER_PASS, USER_BANK, USER_DEPO, USER_ACC,
		        FILE_SN, FILE_PATH, FILE_ORNM, FILE_SVNM, FILE_EXTSN, FILE_CON, FILE_SIZE
		FROM 	BOARD B INNER JOIN USERS U
		ON      B.USER_CD = U.USER_CD LEFT OUTER JOIN FILES_DETAIL F
		ON      B.BD_CD = F.FILE_CD
		WHERE   B.COMD_CD = 'BORD02'
		AND     B.BD_CD = #{bdCd}
	</select>
	
	<update id="count" parameterType="boardVO">
		<selectKey resultType="int" keyProperty="bdCnt" order="BEFORE">
			SELECT BD_CNT FROM BOARD
			WHERE BD_CD = #{bdCd}
		</selectKey>
		UPDATE BOARD
		SET BD_CNT = (#{bdCnt} + 1)
		WHERE BD_CD = #{bdCd}
	</update>

	<select id="getTotal" resultType="int">
		SELECT COUNT(*) FROM BOARD
		WHERE COMD_CD = 'BORD02'
	</select>
	
	<insert id="create" parameterType="boardVO">
	    <selectKey keyProperty="bdCd" resultType="String" order="BEFORE">
<!-- 	       SELECT TO_CHAR(MAX(TO_NUMBER(SUBSTR(BD_CD, LENGTH('BORD02') + 1))) + 1, 'FM00') FROM BOARD -->
		SELECT 'BORD02' || BOARD_SEQ.NEXTVAL FROM DUAL
	    </selectKey>
	    INSERT INTO BOARD(BD_CD, USER_CD, COMD_CD, BD_TITLE, BD_CON, BD_REG, BD_UDT, BD_CNT)
	    VALUES (#{bdCd}, #{userCd}, 'BORD02', #{bdTitle}, #{bdCon}, SYSDATE, NULL, 0)
	</insert>
	
	<update id="updatePost" parameterType="BoardVO">
		UPDATE BOARD
		SET BD_TITLE= #{bdTitle} , BD_CON= #{bdCon}, BD_UDT=SYSDATE
		WHERE BD_CD = #{bdCd}
	</update>
	
	<delete id="deletePost" parameterType="hashMap">
		DELETE FROM BOARD
		WHERE
		BD_CD = #{bdCd}
	</delete>
	
</mapper>

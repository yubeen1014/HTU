<%@ page language="java" contentType="text/html; charset=UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions"%>
<%@ taglib prefix="sec" uri="http://www.springframework.org/security/tags"%>
<link rel="stylesheet" href="/resources/css/bootstrap.min.css">
<script src="/resources/js/jquery.min.js"></script>



<sec:authentication property="principal.userVO" var="userVO"/>
<div class="row" style="margin-bottom:20px; margin-left:1px;">
  <div class="col-lg-12">
    <h1 class="page-header">수정</h1>
  </div>
</div>
<div class="panel" style="margin-left:1px;">
  <div id="contAreaBox">
    <div class="panel">
      <div class="panel-body">
        <form role="form" id="boardForm" action="/common/board/free/update?${_csrf.parameterName}=${_csrf.token}" method="post" enctype="multipart/form-data">
          <input type="text" name="bdCd" value="${boardVO.bdCd}" style="display: none;">
          <div class="table-responsive" style="text-align:center;">
            <table id="datatable-scroller" class="table table-bordered tbl_Form">
              <caption></caption>
              <colgroup>
                <col width="250px" />
                <col />
              </colgroup>
              <tbody>
                <tr>
                  <th class="active">작성자</th>
                  <td class="form-inline">
                    <input type="text" id="userNm" name="userNm" value="작성자" readonly class="form-control" style="width: 200px" />
                    <input type="text" id="userNm" name="userCd" value="${boardVO.userVO.userCd}" readonly class="form-control" style="width: 200px; display: none;" />
                  </td>
                </tr>
                <tr>
                  <th class="active">제목</th>
                  <td class="form-inline">
                    <input type="text" id="bdTitle" name="bdTitle" class="form-control" style="width: 840px" value="${boardVO.bdTitle}" />
                  </td>
                </tr>
                <tr>
                  <th class="active">첨부파일</th>
                  <td class="form-inline">
                    <input type="file" id="uploadFiles" name="uploadFiles" class="form-control" style="width: 840px" multiple />
                  </td>
                </tr>
                <tr>
                  <th class="active">내용</th>
                  <td class="form-inline">
                    <textarea id="bdCon" name="bdCon" cols="100" rows="10" class="form-control">${boardVO.bdCon}</textarea>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
          <div style="margin-left:1px;">
            <button type="submit" class="btn btn-primary" >수정</button>
            <a href="/common/board/free/list" class="btn btn-danger">취소</a>
          </div>
          <sec:csrfInput/>
        </form>
      </div>
    </div>
  </div>
</div>